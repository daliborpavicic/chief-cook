<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp">

    <!-- cuisines -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cuisine" />

    <Spinner
        android:id="@+id/spCuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/cuisines" />

    <!-- diets -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diets" />

    <Spinner
        android:id="@+id/spDiets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/diets" />

    <!-- intolerances -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intolerances" />

    <Spinner
        android:id="@+id/spIntolerances"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/intolerances" />


    <!-- recipe types -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Types" />

    <Spinner
        android:id="@+id/spRecipeTypes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:entries="@array/recipeTypes" />

</LinearLayout>